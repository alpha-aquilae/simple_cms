<!DOCTYPE html PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN"
   "http://www.w3.org/TR/html4/loose.dtd">

<html lang="en">
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
    <title><%= @page_title || 'Admin Area' %></title>
    <meta name="author" content="Dillon Hafer">
    <%= stylesheet_link_tag('public', 'admin', :media => 'all') %>
    <%= javascript_include_tag('application') %>
  </head>
  <body>
    <div id="header">
	    	<%= link_to(image_tag("dh-logo.png"), {:controller => 'public', :action => 'index'}, :class => 'logo') %>
    	<ul>
        <% if session[:username]  %>
        <li style="display:inline;"><%= link_to("iTime", :controller => 'weeks') %></li>
        <li style="display:inline;"><%= link_to("Content", :controller => 'subjects') %></li>
    		<li style="display:inline;"><%= link_to("Admin Users", :controller => 'admin_users') %></li>
	    	<li style="display:inline;"><%= link_to("CDL", :controller => 'cdls') %></li>
        <li style="display:inline; padding-right:4px;"><%= link_to("Log out", :controller => 'access', :action => 'logout') %></li>
        User: <b><%= session[:username] %></b>
	    	<% else %>
        <li style="display:inline;"><%= link_to("Home", :controller => 'public', :action => 'index') %></li>
	    	<% end %>
    	</ul>
    </div>
    <div id="main">
      <% if !flash[:notice].blank? %>
      <div class="notice">
        <%= flash[:notice] %>
      </div>
      <% end %>
      <div id="content">
        <%= yield %>
      </div>
    </div>
    <div id="footer">Copyright Â© 2011 DillonHafer.com</p>
    </div>
  </body>
</html>
