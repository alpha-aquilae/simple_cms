<% @page_title = "User List" %>
<div class="page list">
  <h2>Users</h2>
  <%= link_to("Create User", {:action => 'new'}, :class => 'action new') %>

  <table class="listing" summary="Page list">
    <tr class="header">
      <th>Username</th>
      <th>Name</th>
      <th>Admin</th>
      <th>Captain</th>
      <th>E-mail address</th>
      <th>Actions</th>
    </tr>
    <% @users.each do |au| %>
    <tr>
      <td><%= au.username %></td>
      <td><%= au.name %> </td>
      <td><%= au.admin ? "true" : "" %> </td>
      <td><%= au.captain ? "true" : "" %> </td>
      <td><%= au.email %></td>
      <td class="actions">
        <%= link_to("Edit", {:action => 'edit', :id => au.id}, :class => 'action edit') %>
        <%= link_to("Delete", {:action => 'delete', :id => au.id}, :class => 'action delete') %>
      </td>
    </tr>
    <% end %>
  </table>
</div>
