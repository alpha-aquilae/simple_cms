<% @page_title = "Delete Prospect: #{@cdl.name}" %>

<%= link_to("<< Back to List", {:action => 'list'}, :class => 'back-link') %>

<div class="subject delete">
  <h2>Delete Prospect</h2>
  
  <%= form_for(:cdl, :url => {:action => 'destroy', :id => @cdl.id}) do |f| -%>

    <p>Are you sure you want to permanently delete this cdl?</p>
  
    <p class="reference-name"><%= @cdl.name %></p>
  
    <div class="form-buttons">
      <%= submit_tag("Delete Prospect") %>
    </div>
    
  <% end %>
</div>
