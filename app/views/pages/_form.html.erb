<%= error_messages_for(@page) %>

<table summary="Page form fields">
  <tr>
    <th><%= f.label(:subject_id) %></th>
    <td><%= f.select(:subject_id, Subject.all.collect {|s| [s.name, s.id]}) %></td>
  </tr>
  <tr>
    <th><%= f.label(:name) %></th>
    <td><%= f.text_field(:name) %></td>
  </tr>
  <tr>
    <th><%= f.label(:permalink) %></th>
    <td><%= f.text_field(:permalink) %></td>
  </tr>
  <tr>
    <th><%= f.label(:position) %></th>
    <td><%= f.select(:position, 1..@pages_count ) %></td>
  </tr>
  <tr>
    <th><%= f.label(:visible, "Visible?") %></th>
    <td><%= f.check_box(:visible) %></td>
  </tr>
  <tr>
    <th><%= f.label(:created_at, "Created") %></th>
    <td><%= f.datetime_select(:created_at, :order => [:month, :day, :year]) %></td>
  </tr>
</table>
